{
	"include": ["lib/**/*.ts"],
	"exclude": ["lib/**/*.spec.ts"],
	"compilerOptions": {
		"rootDir": "lib",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"lib": ["ES2024", "DOM"],

		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
	}
}
